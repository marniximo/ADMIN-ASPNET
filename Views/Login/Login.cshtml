@model ADMIN_ASPNET.Models.Empleado

@{
    ViewBag.Title = "Login";
}
<link href="@Url.Content("~/Content/Login.css")" rel="stylesheet" type="text/css" />

@using (Html.BeginForm())
{
    <div class="card custom-card">
        <div class="card-header bg-primary text-white login-header">
            <h3>Inicio de sesion</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label>Legajo</label>
                @Html.TextBoxFor(m => m.Legajo, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Legajo)
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                @Html.PasswordFor(m => m.Contraseña, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Contraseña)
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary rounded-0">Iniciar Sesion</button>
            </div>

        </div>
    </div>
}
<div class="bg-danger text-white">
    <h3>
        @Html.ValidationMessage("InvalidLogin")
    </h3>
</div>
